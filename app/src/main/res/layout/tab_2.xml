<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="16dp"
    tools:context="com.zonkey.saymyname.MainActivity$PlaceholderFragment">


    <ImageView
        android:id="@+id/tab2ImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:src="@drawable/tab2lady"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/tab_2_textView"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_centerInParent="true" />


    <LinearLayout
        android:id="@+id/tab2LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tab_2_you_need_textView"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/arrow" />
    </LinearLayout>
</RelativeLayout>
