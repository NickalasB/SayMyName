<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/content_stripper_name_deets"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/pet_name"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:hint="@string/pet_name"
            android:imeOptions="actionNext"
            android:imeActionLabel="Next"
            android:singleLine="true"/>

        <Spinner
            android:id="@+id/muppet_name_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:spinnerMode="dialog"
            />


        <EditText
            android:id="@+id/grandparent_name"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:hint="@string/grandparent_name"
            android:imeOptions="actionNext"
            android:imeActionLabel="Next"
            android:singleLine="true"/>

        <Spinner
            android:id="@+id/fast_food_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/fast_food_array"
            android:spinnerMode="dialog"/>

        <EditText
            android:id="@+id/ice_cream"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:hint="@string/ice_cream"
            android:imeOptions="actionNext"
            android:imeActionLabel="Next"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/street_name"
            style="@style/TextStyle"
            android:layout_weight="1"
            android:hint="@string/street_name"
            android:imeOptions="actionDone"
            android:imeActionLabel="Done"
            android:singleLine="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">


            <Button
                android:id="@+id/american_name_generator_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="generateAmericanName"
                android:text="@string/american_name_generator" />

            <Button
                android:id="@+id/traditional_name_generator_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="generateTraditionalName"
                android:text="@string/traditional_name_generator" />

            <Button
                android:id="@+id/twisted_name_generator_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="generateFreakyName"
                android:text="@string/freaky_name_generator" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
